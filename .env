# Banco de dados
POSTGRES_USER=taiga
POSTGRES_PASSWORD=taiga_pass_segura  # Mude para algo forte

# URLs (ajuste para seu domínio; padrão: localhost:9000)
TAIGA_SCHEME=http
TAIGA_DOMAIN=localhost:9000
SUBPATH=""
WEBSOCKETS_SCHEME=ws

# Chave secreta (gere uma forte: python -c "import secrets; print(secrets.token_urlsafe(50))")
SECRET_KEY=taiga-secret-key-aqui

# Email (padrão: console; configure SMTP para produção)
EMAIL_BACKEND=console
EMAIL_HOST=smtp.exemplo.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu_user
EMAIL_HOST_PASSWORD=sua_senha
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_DEFAULT_FROM=taiga@exemplo.com

# RabbitMQ
RABBITMQ_USER=taiga
RABBITMQ_PASS=taiga_pass_segura  # Mude para algo forte
RABBITMQ_VHOST=taiga
RABBITMQ_ERLANG_COOKIE=secret-cookie

# Anexos
ATTACHMENTS_MAX_AGE=360

# Telemetria (opcional: False para desabilitar)
ENABLE_TELEMETRY=True
